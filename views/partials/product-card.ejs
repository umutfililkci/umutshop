<% let colLgVal=column==1 ? 12 : column==2 ? 6 : column==3 ? 4 : 3 %>
    <div class="all-isotope-item col-lg-<%= colLgVal %> col-sm-6">
        <div class="thumb d-flex">
            <a class="gallery-fancybox w-100 text-center" href="#">
                <img src="img/<%= product.image %>" alt="image" height="215">
            </a>
            <a class="btn btn-white" href="/products/<%= product.id %>">Görüntüle</a>
        </div>
        <div class="item-details">
            <div class="d-flex justify-content-between">
                <div>
                    <h4><a href="#">
                            <%= product.name %>
                        </a></h4>
                    <p>
                        <%= product.category %>
                    </p>
                </div>
                <div><button class="btn btn-base text-white product-add" data-id="<%= product.id %>"
                        data-name="<%= product.name %>">Ekle</button></div>
            </div>
            <a href="/" class="author-details align-item-center">
                <img src="img/<%= product.providerImage %>" alt="img" height="40">
                <span>
                    <%= product.provider %>
                </span>
            </a>
            <span class="price bg-white float-right">
                <%= product.price %> ₺
            </span>
        </div>
    </div>

    <script>
        document.querySelectorAll(".product-add").forEach(button => {
            button.addEventListener("click", function (e) {
                LocalStorageProcesses.AddItem(e.target.attributes["data-id"].value);
            });
        });
    </script>